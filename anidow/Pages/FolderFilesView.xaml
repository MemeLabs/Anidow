<controls:AdonisWindow
    x:Class="Anidow.Pages.FolderFilesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:converters="clr-namespace:Anidow.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Anidow.Extensions"
    xmlns:helpers="clr-namespace:Anidow.Helpers"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:io="clr-namespace:System.IO;assembly=System.IO.FileSystem"
    xmlns:listViewLayout="clr-namespace:Itenso.Windows.Controls.ListViewLayout;assembly=Itenso.Windows.Controls.ListViewLayout"
    xmlns:local="clr-namespace:Anidow.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Anidow.Model"
    xmlns:s="https://github.com/canton7/Stylet"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:FolderFilesViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <helpers:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </Grid.Resources>

        <GroupBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox PreviewKeyDown="{s:Action OnPreviewKeyDown}" Text="{Binding Folder, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Grid.Column="2"
                    Command="{s:Action GetFilesFromFolder,
                                       ActionNotFound=Disable}"
                    Content="Go" />
            </Grid>

        </GroupBox>

        <ListView
            Grid.Row="1"
            listViewLayout:ListViewLayoutManager.Enabled="true"
            ItemsSource="{Binding FileInfos, Mode=OneWay}"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.IsVirtualizingWhenGrouping="True"
            VirtualizingPanel.ScrollUnit="Pixel"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type ListViewItem}}" TargetType="ListViewItem">
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem
                                    s:View.ActionTarget="{Binding Data, Source={StaticResource Proxy}}"
                                    Command="{s:Action DeleteFile,
                                                       NullTarget=Disable}"
                                    CommandParameter="{Binding}"
                                    Header="Delete"
                                    Icon="{iconPacks:FontAwesome TrashSolid}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Highlight}" Value="true">
                            <Setter Property="BorderThickness" Value="0,2" />
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static adonisUi:Brushes.AccentIntenseHighlightBorderBrush}}" />
                            <Setter Property="Height" Value="28" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderContainerStyle="{StaticResource GridViewLeftContainerStyle}">
                    <GridViewColumn
                        listViewLayout:RangeColumn.IsFillColumn="true"
                        Header="Name"
                        HeaderContainerStyle="{StaticResource GridViewCenteredContainerStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="models:FolderFilesModel">
                                <TextBlock
                                    x:Name="Name"
                                    Text="{Binding File.Name}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap"
                                    ToolTip="{Binding File.Name}" />
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Highlight, Mode=OneWay}" Value="False">
                                        <Setter TargetName="Name" Property="Opacity" Value=".6" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Width="120"
                        listViewLayout:FixedColumn.Width="120"
                        DisplayMemberBinding="{Binding File.CreationTime, Converter={x:Static converters:DateTimeToStringConverter.Instance}}"
                        Header="Created"
                        HeaderContainerStyle="{StaticResource GridViewCenteredContainerStyle}" />
                    <GridViewColumn
                        Width="70"
                        listViewLayout:FixedColumn.Width="70"
                        Header=""
                        HeaderContainerStyle="{StaticResource GridViewCenteredContainerStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="io:FileInfo">
                                <Button
                                    Width="66"
                                    VerticalAlignment="Center"
                                    Command="{s:Action Watch}"
                                    CommandParameter="{Binding File}"
                                    Content="Open"
                                    Style="{StaticResource ColumnButton}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</controls:AdonisWindow>
