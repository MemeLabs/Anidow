<UserControl
    x:Class="Anidow.Pages.Components.Shared.LoadingOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Anidow.Pages.Components.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    x:Name="UserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid Visibility="{Binding DataContext, ElementName=UserControl, Mode=OneWay, Converter={x:Static s:BoolToVisibilityConverter.InverseInstance}}">
        <Grid Background="Black" Opacity=".3" />
        <ContentControl
            Width="35"
            Height="35"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ContentTemplate="{DynamicResource {x:Static adonisUi:Templates.LoadingCircle}}"
            Focusable="False"
            Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" />
    </Grid>
</UserControl>
